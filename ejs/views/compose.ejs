<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
      <label>Title</label>
      <input type="text" class="form-control" name="postTitle" autocomplete="off">
    </div>
    <div class="form-group">
      <label>Post</label>
      <textarea type="text" class="form-control" name="postContent" rows="8" cols="100"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
